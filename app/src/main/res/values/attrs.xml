<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="AVLoadingIndicatorView">
        <attr name="indicator">
            <flag name="LineSpinFadeLoader" value="23"/>
        </attr>
        <attr name="indicator_color" format="color"/>
    </declare-styleable>


    <declare-styleable name="PtrStyle">
        <attr name="style" format="string"/>
        <attr name="MaterialKeep" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="Rotate3dAnimation">
        <attr name="rollType" format="enum">
            <enum name="x" value="0"/>
            <enum name="y" value="1"/>
            <enum name="z" value="2"/>
        </attr>
        <attr name="fromDeg" format="float"/>
        <attr name="toDeg" format="float"/>
        <attr name="pivotX" format="fraction"/>
        <attr name="pivotY" format="fraction"/>
    </declare-styleable>

    <declare-styleable name="DotsProgressBar">
        <!-- 前进的速度 -->
        <attr name="barSpeed">
            <enum name="normal" value="28"/>
            <enum name="slow" value="80"/>
            <enum name="fast" value="10"/>
        </attr>
        <!-- 节点的数量 -->
        <attr name="barDotsCount" format="integer"/>
        <!-- 节点的圆半径 -->
        <attr name="barDotsRadius" format="dimension|reference"/>
        <!-- 进度条的宽度 -->
        <attr name="barProgressWidth" format="dimension|reference"/>
        <!-- 进度条的背景色 -->
        <attr name="barBackColor" format="color|reference"/>
        <!-- 进度条的前景色 -->
        <attr name="barFrontColor" format="color|reference"/>
    </declare-styleable>

    <!--CheckBox-->
    <declare-styleable name="SmoothCheckBox">
        <attr name="duration" format="integer"/>
        <attr name="stroke_width" format="dimension"/>
        <attr name="color_tick" format="color"/>
        <attr name="color_checked" format="color"/>
        <attr name="color_unchecked" format="color"/>
        <attr name="color_unchecked_stroke" format="color"/>
    </declare-styleable>


    <!--节点进度条-->
    <declare-styleable name="NodeProgressView">
        <attr name="width" format="dimension"/>
        <attr name="nodeRadius" format="dimension"/>
    </declare-styleable>
    <!--抢购倒计时-->
    <declare-styleable name="SnapUpCountDownTimerView">
        <attr name="viewSize" format="integer"/>
    </declare-styleable>

    <!--普兰氏快报-->
    <declare-styleable name="RollAdverView">
        <attr name="gap" format="integer"/>
        <attr name="animDuration" format="integer"/>
        <attr name="animDirection" format="integer">
            <enum name="up" value="1"/>
            <enum name="down" value="-1"/>
        </attr>
    </declare-styleable>

    <!--悬停界面-->
    <declare-styleable name="StickNavLayout">
        <!--默认是否悬停tab-->
        <attr name="isStickNav" format="boolean" />
        <!--距离悬浮的位置-->
        <attr name="stickOffset" format="dimension" />
    </declare-styleable>
</resources>