<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <LinearLayout
                    android:id="@+id/ll_refund_card_hander"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_bg_white_corner_10px"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:id="@+id/tv_refund_status"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="3"
                        android:text="退款处理中"
                        android:textColor="@color/app_font_color_f98623"
                        android:textSize="30dp"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_margin="5dp"
                        android:layout_weight="2"
                        android:gravity="center_vertical"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="订单编号:"
                            android:textColor="@color/app_font_color_6c"
                            android:textSize="14dp"
                            />

                        <TextView
                            android:id="@+id/tv_refund_sn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="123513"
                            android:textColor="@color/app_font_color_6c"
                            android:textSize="14dp"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_margin="2dp"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="申请时间:"
                            android:textColor="@color/app_font_color_99"
                            android:textSize="10dp"
                            />

                        <TextView
                            android:id="@+id/tv_refund_create_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2016-04-13 15:25:25"
                            android:textColor="@color/app_font_color_99"
                            android:textSize="10dp"
                            />

                    </LinearLayout>


                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ll_refund_card_hander"
                    android:layout_marginTop="-1dp"
                    android:background="@drawable/tv_bg_repeat_zigzag"
                    />
            </RelativeLayout>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:elevation="4dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="10dp"
                        android:text="退款进度"
                        android:textSize="20sp"
                        />

                    <com.pulamsi.views.progress.DotsProgressBar
                        android:id="@+id/dots_progress_bar_one"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        app:barDotsCount="4"
                        app:barDotsRadius="8dp"
                        app:barProgressWidth="8dp"
                        app:barSpeed="normal"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:id="@+id/tv_order_refund_submit"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="提交申请"
                            />

                        <TextView
                            android:id="@+id/tv_order_refund_cancel"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:gravity="center_horizontal"
                            android:text="取消处理"
                            />

                        <TextView
                            android:id="@+id/tv_order_refund_processing"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:gravity="center_horizontal"
                            android:text="退款处理中"
                            />

                        <TextView
                            android:id="@+id/tv_order_refund_finish"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="退款成功"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:id="@+id/tv_refund_submit_date"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="2016-04-13 15:25:25"
                            android:textColor="@color/app_font_color_99"
                            android:textSize="10dp"
                            />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:gravity="center_horizontal"
                            />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:gravity="center_horizontal"
                            android:text="将在1-2个工作日到账"
                            android:textColor="@color/app_font_color_99"
                            android:textSize="10dp"
                            />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            />
                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0.0001dp"
                android:elevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:padding="10dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_marginTop="-10dp"
                        android:gravity="center_vertical"
                        android:text="订单取消详情"
                        android:textColor="@color/app_font_color_56"
                        android:textSize="20sp"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/app_line_bg"
                        android:background="@color/app_divider_line_bg_cc"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center_vertical"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:text="@string/order_detail_orderid"
                            android:textColor="@color/app_font_color_77"
                            android:textSize="16dp"/>


                        <TextView
                            android:id="@+id/tv_list_refund_sn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="123558552525"
                            android:textColor="@color/app_font_color_77"
                            android:textSize="16dp"/>
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/app_line_bg"
                        android:background="@color/app_divider_line_bg_cc"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center_vertical"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:text="支付总额:"
                            android:textColor="@color/app_font_color_77"
                            android:textSize="16dp"/>


                        <TextView
                            android:id="@+id/tv_list_refund_totalAmount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="250.36"
                            android:textColor="@color/red"
                            android:textSize="16dp"/>
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/app_line_bg"
                        android:background="@color/app_divider_line_bg_cc"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center_vertical"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:text="取消原因:"
                            android:textColor="@color/app_font_color_77"
                            android:textSize="16dp"/>


                        <TextView
                            android:id="@+id/tv_list_refund_cancelReason"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="不要了"
                            android:textColor="@color/app_font_color_77"
                            android:textSize="16dp"/>
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/app_line_bg"
                        android:background="@color/app_divider_line_bg_cc"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center_vertical"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:text="联系人:"
                            android:textColor="@color/app_font_color_77"
                            android:textSize="16dp"/>


                        <TextView
                            android:id="@+id/tv_list_refund_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="戴定康"
                            android:textColor="@color/app_font_color_77"
                            android:textSize="16dp"/>
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/app_line_bg"
                        android:background="@color/app_divider_line_bg_cc"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginBottom="-8dp"
                        android:gravity="center_vertical"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:text="联系电话:"
                            android:textColor="@color/app_font_color_77"
                            android:textSize="16dp"/>


                        <TextView
                            android:id="@+id/tv_list_refund_mobile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="13288453023"
                            android:textColor="@color/app_font_color_77"
                            android:textSize="16dp"/>
                    </RelativeLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>
    <!--LoadViewHelper的状态布局-->
    <RelativeLayout
        android:id="@+id/content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        >
    </RelativeLayout>
</RelativeLayout>
