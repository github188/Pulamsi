<?xml version="1.0" encoding="utf-8"?>

<com.pulamsi.views.MaterialRippleLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_bg_stroke_e2_1px_solid_transparent_corner_2px"
        app:mrl_rippleColor="@color/app_divider_line_bg_e8"
        app:mrl_rippleAlpha="1">

    <TextView
            android:id="@+id/tv_hot_search_word_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="13dp"
            android:paddingRight="13dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:gravity="center"
            android:textSize="14dp"
            android:textColor="@color/app_font_color_a1"/>
</com.pulamsi.views.MaterialRippleLayout>