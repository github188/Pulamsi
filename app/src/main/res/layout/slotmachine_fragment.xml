<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/slotmachine_rootview"
    android:background="@color/background"
    android:layout_height="match_parent">

    <include layout="@layout/slotmachine_header"
        android:id="@+id/slotmachine_header"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:id="@+id/slotmachine_line"
        android:layout_below="@+id/slotmachine_header"
        android:background="@color/app_divider_line_bg_e2"/>


    <com.pulamsi.views.MyViewPager
        android:id="@+id/slotmachine_viewpager"
        android:background="@color/background"
        android:layout_below="@+id/slotmachine_line"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />


</RelativeLayout>