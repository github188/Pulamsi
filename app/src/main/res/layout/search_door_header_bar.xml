<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <!-- 显示区，只可点击，默认显示 -->
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:background="@drawable/shape_bg_solid_app_gray_background_corner_15dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp">

        <EditText
                android:id="@+id/et_search_door_header_input_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/ic_search"
                android:background="@color/transparent"
                android:drawablePadding="2dp"
                android:hint="@string/home_search_hint_str"
                android:textCursorDrawable="@null"
                android:textColor="@color/app_font_color_77"
                android:textSize="16dp"/>

        <ImageView
                android:id="@+id/iv_search_door_header_clear_input_btn"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_delete_gray"
                android:visibility="gone"/>

    </RelativeLayout>

</RelativeLayout>
