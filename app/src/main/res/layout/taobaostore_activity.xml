<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:background="@color/background"
                android:layout_height="wrap_content">

    <com.pnikosis.materialishprogress.ProgressWheel
        android:id="@+id/my_info_taobaostore_pw"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        app:matProg_barWidth="2dp"
        app:matProg_barColor="@color/app_pulamsi_main_color"
        app:matProg_progressIndeterminate="true"/>

    <com.pulamsi.views.PtrStylelFrameLayout
        android:id="@+id/tb_ptrMaterialFrameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        >

    <com.taobao.uikit.feature.view.TRecyclerView
            android:id="@+id/my_info_taobaostore_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:background="@color/background"/>


    </com.pulamsi.views.PtrStylelFrameLayout>


    <!-- 回顶按钮 -->
    <android.support.design.widget.FloatingActionButton
            android:id="@+id/my_info_taobaostore_back_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            app:backgroundTint="@color/white"
            android:src="@drawable/ic_back_top"
            android:layout_margin="15dp"
            app:fabSize="mini"/>


    <com.pulamsi.views.BlankLayout
        android:id="@+id/blank_layout"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

</RelativeLayout>