<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:background="@color/background"
                android:layout_height="wrap_content">


    <com.taobao.uikit.feature.view.TRecyclerView
            android:id="@+id/rv_search_list_main_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background"/>


    <!-- 回顶按钮 -->
    <android.support.design.widget.FloatingActionButton
            android:id="@+id/iv_search_list_back_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            app:backgroundTint="@color/white"
            android:src="@drawable/ic_back_top"
            app:fabSize="mini"/>

    <com.pulamsi.views.BlankLayout
        android:id="@+id/blank_layout"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>