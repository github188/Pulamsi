<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <com.taobao.uikit.feature.view.TRecyclerView
                android:id="@+id/addevaluate_trecyclerview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/background"
                android:scrollbars="none"
                ></com.taobao.uikit.feature.view.TRecyclerView>

            <include
                android:id="@+id/i_evaluate_angel"
                layout="@layout/include_evaluate_angel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                ></include>

            <View
                android:layout_width="match_parent"
                android:layout_height="46dp"/>

        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/addevaluate_evaluate"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/selector_btn_solid_main_color"
        android:gravity="center"
        android:text="@string/addevaluate_evaluate"
        android:textColor="@color/white"
        android:textSize="@dimen/button_text_size"/>


    <!--LoadViewHelper的状态布局-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/content_layout"
        >
    </RelativeLayout>

</RelativeLayout>