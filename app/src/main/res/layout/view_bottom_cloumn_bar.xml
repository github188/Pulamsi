<?xml version="1.0" encoding="utf-8"?>
<!--底部控制栏-->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    >

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_line_bg"
        android:background="@color/app_divider_line_bg_cc"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="horizontal"
        android:padding="5dp"
        >

        <TextView
            android:id="@+id/slotmachine_manage_list_distribution"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/slotmachine_manage_distribution_is_enable"
            android:gravity="center"
            android:text="分配"
            android:textColor="@drawable/is_enable_text"
            android:textSize="10sp"
            />
    </LinearLayout>
</RelativeLayout>

