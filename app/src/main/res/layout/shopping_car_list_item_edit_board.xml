<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/ll_shopping_car_edit_board"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="@dimen/shopping_car_list_item_height"
              android:clickable="true"
              android:visibility="gone">

    <!-- transparent mask-->
    <View
            android:layout_width="100dp"
            android:layout_height="match_parent"/>

    <!--  edit infomation board-->
    <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:paddingTop="9dp"
            android:paddingBottom="9dp"
            android:paddingLeft="9dp"
            android:paddingRight="6dp"
            android:background="@color/white">

        <!-- number edit board-->
        <com.pulamsi.views.ItemNumberEditView
                android:id="@+id/inev_shopping_car_edit_item_num"
                android:layout_width="match_parent"
                android:layout_height="38dp"/>

        <TextView
                android:id="@+id/tv_shopping_car_item_title"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:gravity="center_vertical|left"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:textSize="12dp"
                android:textColor="@color/app_font_color_77"
                android:background="@drawable/layer_list_bg_stroke_2f_1px_0_1px_1px_solid_transparent"/>

    </LinearLayout>

    <!-- delete button-->
    <TextView
            android:id="@+id/tv_shopping_car_delete_item"
            android:layout_width="54dp"
            android:layout_height="match_parent"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:gravity="center"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:background="@drawable/selector_btn_solid_main_color"
            android:text="@string/shopping_car_item_delete_btn_str"/>

</LinearLayout>