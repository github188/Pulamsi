<?xml version="1.0" encoding="utf-8" standalone="no"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
        <TextView
            android:id="@+id/tv_common_list_pager_footer"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/app_font_color_77"
            android:textSize="13sp"
            android:text="@string/loading_more_footer"/>

        <com.pnikosis.materialishprogress.ProgressWheel
            android:id="@+id/loading_pw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingTop="17dp"
            android:paddingBottom="17dp"
            android:paddingRight="5dp"
            android:layout_toLeftOf="@+id/tv_common_list_pager_footer"
            app:matProg_barWidth="1dp"
            app:matProg_barColor="@color/app_pulamsi_main_color"
            app:matProg_progressIndeterminate="true"/>




    </RelativeLayout>

</RelativeLayout>