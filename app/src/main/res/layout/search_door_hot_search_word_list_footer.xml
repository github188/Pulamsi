<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="@dimen/app_main_left_margin"
            android:textSize="16dp"
            android:textColor="@color/app_font_color_2f"
            android:text="@string/search_door_hot_search_word_str"/>

    <!-- 热门搜索 -->
    <com.pulamsi.views.AutoFitViewGroup
            android:id="@+id/afvg_search_door_hot_search_word_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/app_main_left_margin"
            android:paddingRight="@dimen/app_main_right_margin"
            android:paddingBottom="16dp"
            app:rowMargin="12dp"
            app:columnMargin="14dp"/>
</LinearLayout>