<?xml version="1.0" encoding="utf-8"?>
 <RelativeLayout
     xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/order_confirmation_consignee_layout"
    android:layout_width="match_parent"
    android:visibility="gone"
    android:layout_height="wrap_content"
    android:background="@color/white">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/order_confirmation_consignee"
            android:layout_marginLeft="@dimen/app_main_left_margin"
            android:textColor="@color/app_font_color_2f"
            android:textSize="16dp"
            android:layout_marginTop="12dp"
            android:text="@string/order_confirmation_consignee"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/order_confirmation_consignee_name"
            android:layout_toRightOf="@id/order_confirmation_consignee"
            android:layout_alignTop="@id/order_confirmation_consignee"
            android:textColor="@color/app_font_color_2f"
            android:textSize="16dp"
            android:text=""/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/order_confirmation_consignee_phone"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/order_confirmation_consignee"
            android:layout_marginRight="41dp"
            android:textColor="@color/app_font_color_2f"
            android:textSize="16dp"
            android:text=""/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/order_confirmation_consignee_address"
            android:layout_marginRight="41dp"
            android:layout_alignLeft="@id/order_confirmation_consignee"
            android:layout_below="@+id/order_confirmation_consignee_phone"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="12dp"
            android:textColor="@color/app_font_color_77"
            android:textSize="16dp"
            android:text=""/>
        
        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_centerVertical="true"
            android:id="@+id/order_confirmation_consignee_more"
            android:background="@drawable/ic_list_more"
            android:layout_alignParentRight="true"
            android:layout_marginRight="6dp"/>
    </RelativeLayout>