<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.TabLayout
        android:id="@+id/tl_my_order_tabs"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        style="@style/Hai.CustomTabLayout1"/>

    <!-- divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/app_divider_line_bg_e2"/>
    <com.pulamsi.views.OrderViewPager
        android:id="@+id/vp_my_order_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_divider_bg"/>

</LinearLayout>