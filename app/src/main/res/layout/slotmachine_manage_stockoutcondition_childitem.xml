<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:padding="5dp"
    android:background="@color/white"
    android:layout_height="60dp">

    <ImageView
        android:layout_width="50dp"
        android:layout_marginLeft="@dimen/app_main_left_margin"
        android:id="@+id/slotmachine_manage_stockoutcondition_childitem_goodsimage"
        android:src="@drawable/goodsimage"
        android:layout_height="50dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_marginLeft="@dimen/app_main_left_margin"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="25dp">

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/slotmachine_manage_stockoutcondition_childitem_goodsroadNum"
                android:text="货道号:1"
                android:gravity="center_vertical"
                android:layout_height="25dp" />
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/slotmachine_manage_stockoutcondition_childitem_stockout"
                android:layout_marginLeft="@dimen/app_main_left_margin"
                android:text="缺货:1"
                android:gravity="center_vertical"
                android:layout_height="25dp" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/slotmachine_manage_stockoutcondition_childitem_goodsroadName"
            android:text="产品名称:海洋清新净肤手工皂"
            android:gravity="center_vertical"
            android:layout_height="25dp" />
    </LinearLayout>
</LinearLayout>