<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/header_bar_main_container"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/title_bar_height"
                android:background="@color/white">

    <RelativeLayout
        android:id="@+id/header_bar_left_container"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:background="?android:attr/selectableItemBackground"
        android:gravity="center_vertical|left"
        android:paddingLeft="6dp"
        android:paddingRight="9dp">

        <TextView
            android:id="@+id/tv_title_bar_left"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="?android:attr/selectableItemBackground"
            android:focusable="false"
            android:gravity="center"
            android:textColor="@color/app_font_color_77"
            android:textSize="14dp"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/iv_title_bar_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:src="@drawable/ic_back"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/header_bar_center_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/header_bar_right_container"
        android:layout_toRightOf="@+id/header_bar_left_container"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_title_bar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/app_pulamsi_main_color"
            android:textSize="16dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/header_bar_right_container"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical|right"
        android:paddingLeft="9dp">

        <TextView
            android:id="@+id/tv_title_bar_right"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="?android:attr/selectableItemBackground"
            android:focusable="false"
            android:gravity="center"
            android:textColor="@color/app_font_color_77"
            android:textSize="14dp"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/iv_title_bar_right"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="?android:attr/selectableItemBackground"
            android:scaleType="center"
            android:focusable="false"
            android:gravity="center_vertical"
            android:visibility="gone"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_title_bar_title_fake"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="17dp"
        android:visibility="gone"/>

    <!-- divider -->
    <View
        android:id="@+id/divider_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@color/app_divider_line_bg_e2"/>
</RelativeLayout>