<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_height="match_parent"
                android:background="@color/background">

    <com.pulamsi.views.PtrStylelFrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/ptr_home_material_style_ptr_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="@color/app_divider_bg"
        app:MaterialKeep="true"
        >

        <com.taobao.uikit.feature.view.TRecyclerView
            android:id="@+id/orderlist_trecyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            android:background="@color/background"
            ></com.taobao.uikit.feature.view.TRecyclerView>
    </com.pulamsi.views.PtrStylelFrameLayout>


    <!--LoadViewHelper的状态布局-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/content_layout"
        >
    </RelativeLayout>

</RelativeLayout>