<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/rl_security_success"
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:layout_height="wrap_content">
    <ImageView 
        android:id="@+id/security_fly_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/security_fly_star"
        />
    <ImageView 
        android:id="@+id/security_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/security_star"
        />
    <ImageView 
        android:id="@+id/security_zp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/security_zp"
        />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_security_failure"
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/security_failure"
            />
    </RelativeLayout>
    
</RelativeLayout>
