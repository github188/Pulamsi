<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/background"
    android:layout_height="wrap_content">

    <!-- divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:layout_height="50dp">

    <CheckBox
        android:layout_width="60dp"
        android:id="@+id/slotmachine_manage_discount_selectproduct_item_checkbox"
        android:button="@drawable/checkbox_circle_selector"
        android:background="@color/white"
        android:checked="true"
        android:textColor="@color/app_btn_main_color"
        android:layout_height="match_parent" />
        <TextView
            android:id="@+id/slotmachine_manage_discount_selectproduct_item_content"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

    </LinearLayout>

    <!-- divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

</LinearLayout>