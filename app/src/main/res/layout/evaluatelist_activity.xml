<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">


    <com.pnikosis.materialishprogress.ProgressWheel
        android:id="@+id/evaluate_activity_pw"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        app:matProg_barColor="@color/app_pulamsi_main_color"
        app:matProg_barWidth="2dp"
        app:matProg_progressIndeterminate="true" />

    <com.pulamsi.views.PtrStylelFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/evaluate_ptr_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_divider_bg"
        android:visibility="gone">

        <com.taobao.uikit.feature.view.TRecyclerView
            android:id="@+id/evaluate_trecyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background"
            android:scrollbars="none"></com.taobao.uikit.feature.view.TRecyclerView>
    </com.pulamsi.views.PtrStylelFrameLayout>


    <com.pulamsi.views.BlankLayout
        android:id="@+id/blank_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

</RelativeLayout>