<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/search_header"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="50dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_toLeftOf="@+id/category_search_rightimage"
        android:layout_centerInParent="true"
        android:id="@+id/home_search_edit"
        android:layout_gravity="center_vertical"
        android:background="@drawable/shape_bg_solid_app_gray_background_corner_20dp"
        android:paddingLeft="8dp"
        android:layout_marginLeft="10dp"
        android:paddingRight="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/ic_search"
            android:drawablePadding="2dp"
            android:gravity="left|center_vertical"
            android:text="@string/home_search_hint_str"
            android:textColor="@color/app_font_color_c2"
            android:textSize="16dp"/>

    </RelativeLayout>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="12dp"
        android:id="@+id/category_search_rightimage"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_qrcode_gray"
        android:scaleType="centerInside" />

</RelativeLayout>